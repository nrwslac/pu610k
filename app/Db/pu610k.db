record(longout, "$(BASE):$(CHAN):REINIT") {
    field(DESC, "PU610K Reinitialization")
    field(DTYP, "stream")
    field(OUT,  "@pu610k.proto Initialization $(PORT)")
    field(OMSL, "supervisory")
}
